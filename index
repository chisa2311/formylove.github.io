    function mostrarIdioma() {
      index++;
   if (index >= idiomas.length) {
  document.getElementById("idioma").innerHTML = 
    "💖 Ya viste todos los idiomas 💖<br><br>" +
    "Te amo linda, eres una parte muy especial en mi vida, gracias por todo lo que haces por mi, " +
    "llenas de felicidad mi vida, mereces más de todo lo que tengo y tendré, " +
    "mereces tener todo para ti, mereces una vida feliz, tranquila, llena de salud y vida, " +
    "tal vez no pueda darte todo eso, pero haré mi mayor esfuerzo para seguir manteniéndote contigo <3 Te amo linda";
  
  const boton = document.getElementById("reiniciar");
  boton.style.display = "inline-block"; // Mostrar el botón
  boton.onclick = () => {                // Al hacer clic, reinicia
    index = -1;
    document.getElementById("idioma").innerText = "Presiona ENTER o ESPACIO para empezar 💖";
    boton.style.display = "none";
  };

  return;
}


      const actual = idiomas[index];
      document.getElementById("idioma").innerHTML =
        `En <span style="color:#e91e63">${actual.lang}</span> se escribe <strong>"${actual.text}"</strong> y se pronuncia <em>${actual.pron}</em>`;
    }

    document.addEventListener("keydown", (event) => {
      if (event.key === "Enter" || event.key === " ") {
        mostrarIdioma();
      }
    });
  </script>
